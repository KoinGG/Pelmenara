			<TextBox 
				x:Name="search"
				Watermark="НАЙТИ РЕЦЕПТ..."
				Height="32"
				Margin="0,26,0,0" />			

			<TextBlock 
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				x:Name="text00"
				Text="{Binding Text00}"/>
		</StackPanel>
		
		<StackPanel Background="LightPink" 
					Grid.Column="1" Grid.Row="0"
					Margin="5,10,10,5">

			<Button 
				Content="Вход" 
				Command="{Binding SignInCommand}"
				CommandParameter="{Binding ElementName=thisWindow}"
				VerticalContentAlignment="Center" 
				HorizontalContentAlignment="Center"
				Width="62" Height="30"
				x:Name="btn_SignIn"
				IsEnabled="True" IsVisible="True"
				Foreground="#000000" Background="#7851a9"
				HorizontalAlignment="Center"
				Margin="0,27,0,0" Cursor="Arrow"/>
			
			<Button 
				Content="Выход"
			    Command="{Binding SignOutCommand}"
			    CommandParameter="{Binding ElementName=thisWindow}"
			    VerticalContentAlignment="Center" 
			    HorizontalContentAlignment="Center"
			    Width="62" Height="30"
			    x:Name="btn_SignOut"
			    IsEnabled="False" IsVisible="False"
			    Foreground="#000000" Background="#7851a9"
				HorizontalAlignment="Center"
			    Margin="0,27,0,0" Cursor="Arrow"/>
		</StackPanel>
		
		<StackPanel Background="LightGreen" 
					Grid.Column="0" Grid.Row="1"
					Margin="10,5,5,5">

			<ListBox Background="Azure"
					 SelectedItem="{Binding SelectedRecipe}"
					 Items="{Binding Recipes}">
				
			</ListBox>
			
			<TextBlock 
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				x:Name="text01" 
				Text="{Binding Text01}"/>
		</StackPanel>
		
		<StackPanel Background="LightYellow" 
					Grid.Column="1" Grid.Row="1"
					Margin="5,5,10,10">
			
			<Button 
				Command="{Binding }" x:Name="btn_AddRecipe"					
				CommandParameter="{Binding ElementName=thisWindow}"
				Foreground="#000000" Background="#7851a9"
				IsEnabled="False" IsVisible="True"
				Width="85" Height="48"
				Margin="0,50,0,0" Cursor="Arrow">				
				<TextBlock TextAlignment="Center"> 
					Добавить <LineBreak/> рецепт
				</TextBlock>
			</Button>
			
			<Button
				Command="{Binding }" x:Name="btn_ChangeRecipe"					
				CommandParameter="{Binding ElementName=thisWindow}"
				Foreground="#000000" Background="#7851a9"
				IsEnabled="False" IsVisible="True"
				Width="85" Height="48"
				Margin="0,15,0,0" Cursor="Arrow">				
				<TextBlock TextAlignment="Center"> 
					Изменить <LineBreak/> рецепт
				</TextBlock>
			</Button>
			
			<Button
				Command="{Binding }" x:Name="btn_DeleteRecipe"					
				CommandParameter="{Binding ElementName=thisWindow}"
				Foreground="#000000" Background="#7851a9"
				IsEnabled="False" IsVisible="True"
				Width="85" Height="48"
				Margin="0,15,0,0" Cursor="Arrow">
				<TextBlock TextAlignment="Center"> 
					Удалить <LineBreak/> рецепт
				</TextBlock>
			</Button>
			
			<TextBlock HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   x:Name="text11"
					   Text="{Binding Text11}"/>
		</StackPanel>
		
